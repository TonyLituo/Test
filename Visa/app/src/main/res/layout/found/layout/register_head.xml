<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/first"
            android:layout_width="@dimen/space_30"
            android:layout_height="@dimen/space_30"
            android:layout_marginTop="@dimen/space_5"
            android:background="@drawable/green_drak_point"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20" />

        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/space_70"
            android:layout_height="@dimen/space_3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:layout_toRightOf="@+id/first"
            android:background="@color/green_light" />

        <TextView
            android:id="@+id/second"
            android:layout_width="@dimen/space_30"
            android:layout_height="@dimen/space_30"
            android:layout_marginTop="@dimen/space_5"
            android:layout_toRightOf="@+id/view1"
            android:background="@drawable/green_light_point"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20" />

        <View
            android:id="@+id/view2"
            android:layout_width="@dimen/space_70"
            android:layout_height="@dimen/space_3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:layout_toRightOf="@+id/second"
            android:background="@color/green_light" />

        <TextView
            android:layout_width="@dimen/space_30"
            android:layout_height="@dimen/space_30"
            android:layout_marginTop="@dimen/space_5"
            android:layout_toRightOf="@+id/view2"
            android:background="@drawable/green_light_point"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginRight="@dimen/space_30"
        android:layout_marginTop="@dimen/space_10"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_first_step"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="用户注册"
            android:textColor="@color/green_dark"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_second_step"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_40"
            android:layout_marginRight="@dimen/space_40"
            android:layout_weight="1"
            android:gravity="center"
            android:text="绑定银行卡"
            android:textColor="@color/green_light"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_three_step"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/green_light"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>


</LinearLayout>