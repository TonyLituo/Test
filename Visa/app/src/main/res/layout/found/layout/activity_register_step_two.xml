<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include
        layout="@layout/toolbar_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_20"
        android:orientation="vertical">

        <include layout="@layout/register_head" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginTop="@dimen/space_30"
        android:background="@drawable/btn_white_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_10"
            android:orientation="horizontal">

            <ImageView
                style="@style/img_left_style"
                android:background="@mipmap/phone_num" />

            <EditText
                style="@style/et_style"
                android:hint="请输入银行预留手机号码"
                android:inputType="number"
                android:maxLength="11" />
        </LinearLayout>

        <View style="@style/viewh_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_10"
            android:orientation="horizontal">

            <ImageView
                style="@style/img_left_style"
                android:background="@mipmap/name" />

            <EditText
                style="@style/et_style"
                android:hint="请输入姓名"
                android:inputType="number"
                android:maxLength="11" />
        </LinearLayout>

        <View style="@style/viewh_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_10"
            android:orientation="horizontal">

            <ImageView
                style="@style/img_left_style"
                android:background="@mipmap/ic_card" />

            <EditText
                style="@style/et_style"
                android:hint="请输入身份证号"
                android:inputType="number" />
        </LinearLayout>

        <View style="@style/viewh_style" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_code"
                style="@style/img_left_style"
                android:background="@mipmap/yin_hang_card" />

            <EditText
                style="@style/et_style"
                android:layout_toRightOf="@+id/iv_code"
                android:hint="请选择银行卡"
                android:inputType="number"
                android:maxLength="8" />

            <ImageView style="@style/img_right_arrow_style" />
        </RelativeLayout>

        <View style="@style/viewh_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_10"
            android:orientation="horizontal">

            <ImageView
                style="@style/img_left_style"
                android:layout_gravity="center"
                android:background="@mipmap/psw" />

            <EditText
                style="@style/et_style"
                android:hint="请输入银行卡交易密码"
                android:inputType="number" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        style="@style/btn_blue_solid"
        android:layout_marginTop="@dimen/space_30"
        android:text="下一步" />

</LinearLayout>