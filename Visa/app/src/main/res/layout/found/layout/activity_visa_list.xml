<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.dhcc.visa.ui.view.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/head_pic"
            android:layout_width="match_parent"
            android:scaleType="center"
            android:layout_height="200dp"
            android:src="@mipmap/usa"
            />
        <ImageView
            android:id="@+id/iv_prdtlist_back"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/btn_back"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="美国"
            android:textColor="@color/background_white"
            android:layout_marginTop="10dp"
            android:textSize="23sp"/>

        <LinearLayout
            android:gravity="center"
            android:background="@drawable/bg_touming_huise"
            android:id="@+id/ll_select_city"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
           android:layout_marginTop="110dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="长期居住  |"
                android:textSize="16sp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  北京"
                android:textSize="16sp"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/arrow_down"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_below="@id/ll_select_city"
            android:layout_width="500dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/sorting"
                />
            <TextView
                android:id="@+id/tv_sorting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排序"
                android:textSize="18sp"
                android:textColor="@color/background_white"/>
            <ImageView
                android:layout_marginLeft="50dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/filter"
                />
            <TextView
                android:id="@+id/tv_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="筛选"
                android:textSize="18sp"
                android:textColor="@color/background_white"/>
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/small_laba"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小智头条：  "
            android:textSize="16sp"
            android:textColor="@color/black"
            android:maxLines="1"
           />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:layout_marginRight="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="美国签证注意事项、美国热门旅游胜地、当地美食集锦"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:maxLines="1"
           />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/more_arrow"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/visa_policy"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/visa_policy"
            android:text="签证政策"/>
        <TextView
            android:id="@+id/tv_consulate_info"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/consulate_info"
            android:text="领馆信息"/>
        <TextView
            android:id="@+id/tv_out_of_prediction"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/visa_prediction"
            android:text="出签预测"/>
        <TextView
            android:id="@+id/tv_out_of_the_kit"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/out_of_the_kit"
            android:text="出境锦囊"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#DFDFDF"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_countries"
        android:background="#DFDFDF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
