<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_marginTop="2dp"
    android:layout_height="120dp">

    <TextView
        android:id="@+id/tv_prdt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#505050"
        android:layout_marginLeft="10dp"
        android:text="美国商务旅游签证（B1/B2）- 全国受理"/>
    <LinearLayout
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_sign_out_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出签率"/>
        <TextView
            android:id="@+id/tv_sign_out_rate_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#FDA209"
            android:text="99.9%"/>
        <ImageView
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/star"/>
        <ImageView
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/star"/>
        <ImageView
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/star"/>
        <ImageView
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/star"/>
        <ImageView
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/star"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_ke_jia_ji"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_white_gray_solid_bg"
            android:text="可加急"/>
        <Button
            android:id="@+id/btn_bao_hui_you"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_white_gray_solid_bg"
            android:text="包回邮"/>
        <Button
            android:id="@+id/btn_man_jian_fei"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_white_gray_solid_bg"
            android:text="满减费"
            />
        <TextView
            android:id="@+id/tv_original_price"
            android:layout_marginLeft="130dp"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥1399"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/qianbi"/>
        <TextView
            android:id="@+id/tv_number_of_people_handling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 1000人已办理   |   "/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/comment_num"/>
        <TextView
            android:id="@+id/tv_number_of_people_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 2000人已评论"/>
        <TextView
            android:id="@+id/tv_current_price"
            android:layout_marginLeft="46dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#F8A602"
            android:text="￥1399"/>
    </LinearLayout>

</LinearLayout>
