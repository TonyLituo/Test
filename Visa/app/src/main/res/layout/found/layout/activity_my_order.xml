<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/background_color"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
        android:id="@+id/title_bar"
        layout="@layout/toolbar_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/white"
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginBottom="@dimen/space_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_margin="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号：112459"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已完成"/>

            </RelativeLayout>
            <View
                style="@style/viewh_style"/>

            <RelativeLayout
                android:layout_margin="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/space_30"
                    android:layout_height="@dimen/space_30"
                    android:src="@mipmap/logo"
                    />
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:textColor="@color/text_color_black"
                    android:text="美国商务签证-全国受理（免面试）"/>

            </RelativeLayout>
            <View
                style="@style/viewh_style"/>

            <LinearLayout
                android:layout_margin="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_40"
                    android:textColor="@color/text_color_black"
                    android:text="张某某"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_15"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/text_color_gray_light"
                    android:text="在职人员"/>

            </LinearLayout>


            <RelativeLayout
                android:layout_margin="@dimen/space_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_black"
                    android:text="合计：￥1599"/>
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:layout_height="@dimen/space_40"
                        android:background="@drawable/layout_gray_white_bg"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/text_color_gray_light"
                        android:text="@string/evaluate"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_margin="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号：112459"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="@string/upload_info"/>

            </RelativeLayout>
            <View
                style="@style/viewh_style"/>

            <RelativeLayout
                android:layout_margin="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logo1"
                    android:layout_width="@dimen/space_30"
                    android:layout_height="@dimen/space_30"
                    android:src="@mipmap/logo"
                    />
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/logo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:textColor="@color/text_color_black"
                    android:text="美国商务签证-全国受理（免面试）"/>

            </RelativeLayout>
            <View
                style="@style/viewh_style"/>

            <LinearLayout
                android:layout_margin="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_40"
                    android:textColor="@color/text_color_black"
                    android:text="张某某"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_15"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/text_color_gray_light"
                    android:text="在职人员"/>

            </LinearLayout>


            <RelativeLayout
                android:layout_margin="@dimen/space_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_black"
                    android:text="合计：￥1599"/>
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:background="@drawable/btn_blue_white_solid_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/space_40"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/blue"
                        android:text="@string/upload"/>
                    <Button
                        android:layout_height="@dimen/space_40"
                        android:layout_marginLeft="@dimen/space_10"
                        android:background="@drawable/layout_gray_white_bg"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/text_color_gray_light"
                        android:text="@string/cancel_order"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:background="@mipmap/btm_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>





</LinearLayout>