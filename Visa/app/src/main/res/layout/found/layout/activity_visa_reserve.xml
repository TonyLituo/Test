<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_visa_reserve"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context="com.dhcc.visa.ui.view.mine.VisaReserveActivity"
    >

    <include
        layout="@layout/toolbar_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        style="@style/text_gray_style"
        android:text="@string/trip_date"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white"
        android:gravity="center"
        android:text="@string/hint_trip_date"
        android:textColor="@color/text_color_dark_gray"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_5"
        android:text="@string/proposer_info"
        android:textColor="@color/text_color_dark_gray"
        android:textSize="@dimen/text_max"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white"
        android:gravity="center"
        android:text="@string/proposer_name"
        android:textColor="@color/text_color_dark_gray"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_marginLeft="@dimen/space_15"
        android:background="@color/bg_color_dark"/>

    <TextView
        android:id="@+id/tv_identity"
        android:layout_width="wrap_content"
        style="@style/text_gray_style"
        android:gravity="center"
        android:text="@string/proposer_id"
        android:textColor="@color/text_color_dark_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10"
        android:background="@color/background_white"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/space_20"
            android:layout_height="@dimen/space_20"
            android:src="@mipmap/visa_add_new"/>

        <TextView
            android:id="@+id/tv_add_new"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_5"
            android:gravity="center_vertical"
            android:text="@string/proposer_add"
            android:textColor="@color/text_blue"/>
    </LinearLayout>
</LinearLayout>
