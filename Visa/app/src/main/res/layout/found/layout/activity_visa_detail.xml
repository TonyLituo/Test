                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/space_25"
                android:paddingTop="@dimen/space_15"
                android:paddingBottom="@dimen/space_15"
                android:paddingRight="@dimen/space_10">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/sign_rate"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出签率"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/text_color_gray_light"/>
                    <TextView
                        android:layout_toRightOf="@+id/sign_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_15"
                        android:textSize="@dimen/text_size_18"
                        android:textColor="@color/orange"
                        android:text="99%"/>
                    <RelativeLayout
