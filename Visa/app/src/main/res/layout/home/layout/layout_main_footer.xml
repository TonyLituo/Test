<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutFooter"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/main_footer_bg">
    <!--android:background="@color/main_footer_bg"-->

    <View
        android:id="@+id/viewSplit"
        style="@style/viewh_style"/>

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/viewSplit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/rbtn_home"
            style="@style/main_footer_bar_radio"
            android:checked="true"
            android:drawableTop="@drawable/widget_bar_home_bg"
            android:text="@string/home" />

        <RadioButton
            android:id="@+id/rbtn_found"
            style="@style/main_footer_bar_radio"
            android:drawableTop="@drawable/widget_bar_find_bg"
            android:text="@string/found" />

        <RadioButton
            android:id="@+id/rbtn_problem"
            style="@style/main_footer_bar_radio"
            android:drawableTop="@drawable/widget_bar_order_bg"
            android:text="@string/problem" />

        <RadioButton
            android:id="@+id/rbtn_my_visa"
            style="@style/main_footer_bar_radio"
            android:drawableTop="@drawable/widget_bar_mine_bg"
            android:text="@string/my_visa" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@null"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null">

            <View
                android:id="@+id/viewSplitLine"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@null" />

            <!-- <TextView
                android:id="@+id/textUnreadLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/viewSplitLine"
                android:layout_toRightOf="@+id/viewSplitLine"
                android:background="@drawable/ic_bg_unread_count"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_13" /> -->
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>